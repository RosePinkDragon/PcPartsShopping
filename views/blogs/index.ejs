<!DOCTYPE html>
<html lang="en">
<!-- this is a partial -->
<%- include('../partials/head.ejs') %>

<body>

    <%- include('../partials/nav.ejs') %>

    <div class="blog content">
        <h2 class="text-2xl font-bold">All Blogs</h2>
        <div class="m-8 grid sm:grid-cols-3">
            <% if(blogs.length > 0) { %>
                    <% blogs.forEach(blog => { %>
                    <% i=Math.floor(Math.random()*(10 - 1 +1)+1); %>
                    
                        <div class="card hover:shadow-lg hover:bg-gray-200 hover:scale-110">
                        
                        <a class="" href="/blogs/<%= blog._id %>">
                            <img class="" src="/img/img<%= i %>.jpg">
                            <h3 class="title text-2xl font-semibold hover:text-crimson">
                            <%= blog.title%>
                            </h3>     
                            <p class="text-xl block text-gray-500"><%= blog.snippet %></p>                
                        </a>
                    </div> 
                
                <% }) %>
            <% } else { %>
                <p>There are No Blogs to Display....</p>
            <% } %>
        </div>
    </div>



<%- include('../partials/footer.ejs') %>
    
</body>
</html>